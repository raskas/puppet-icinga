ScriptAlias /icinga/cgi-bin "/usr/lib/icinga/cgi"

<Directory "/usr/lib/icinga/cgi">
#  SSLRequireSSL
   Options ExecCGI
   AllowOverride None
   Order allow,deny
   Allow from all
#  Order deny,allow
#  Deny from all
#  Allow from 127.0.0.1
<% if ! authentication.to_s.empty? -%>
   AuthName "Icinga Access"
   AuthType Basic
   AuthUserFile /etc/icinga/htpasswd.users
   Require valid-user
<% end -%>
</Directory>

